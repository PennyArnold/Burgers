<div class="container">
  <div class="jumbotron big-banner" style="height: 800px;">
    <h1 class="text-light">Eat A Burger! </h1>
     <br>
 
    <panel>
      <form class="create-form">
        <div class="form-group">
          <label for="newburger" class="text-light">Create Your Burger</label>
        
          <input type="text" id="newburger" name="burger">
          <button type="submit" class="btn btn-success" id="addburger">
            <span class="fa fa-thumbs-up"></span>
          </button>
            <br><br>
          <select data-placeholder="" id="newburger" name="burger">
            <option value="Nothing Selected" selected>Select a Burger</option>
            <option value="Hamburger">Hamburger</option>
            <option value="CheeseBurger">CheeseBurger</option>
            <option value="DoubleBfChz">Double Up (double meat and cheese)</option>
            <option value="VeggieBurger">Veggie Burger</option>
            <option value="PulledPork">Pulled Pork Sandwich</option>
            <option value="ChichenClub">Chicken Club Sandwich</option>
            <option value="SteaknChz">Steak and Cheese Sandwich</option>
          </select>

          
        </div>
      </form>
    </panel>

    <div class="row">
      <div class="col-sm-5">
        <div class="panel panel-default">
          <div class="panel-heading text-light bg-success" id="leftside"><strong>Here's Your Burger</strong>
            <p>Eat it by clicking the Yum button</p>
          </div>
          <div class="panel-body">

            <ul>
              {{#each burgers}}
              {{#unless devoured}}

              <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
              <button type="button" class="eatburger btn btn-success" id="eatbutton" data-id="{{this.id}}"
                data-newDevoured="{{devour}}">Yum</button>
              <hr>
              {{/unless}}
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6">
        <div class="panel panel-default">
          {{!-- <div class="panel-heading" id="rightside"><strong>Burger is Ready for Pick Up</strong>
            <p>Remove order from pick up when delivered</p>
          </div> --}}
          <div class="panel-body">
            <ul>
              {{#each burgers}}
              {{#if devoured}}
              <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
              <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
                data-newDevoured="{{devour}}">Devour</span></button>
              <hr>
              {{/if}}
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{!-- endJumbotron --}}
</div>
<!--endcontainer -->
</div>