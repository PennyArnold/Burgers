<div class="container">
  <div class="jumbotron big-banner" style="height: 800px;">
    <h1 class="text-light">Eat A Burger! </h1>
    <br>

    <panel>
      <form class="create-form">
        <div class="form-group">
          <label for="newburger" class="text-light">Create Your Burger</label>

          <input type="text" id="newburger" name="burger">
          <button type="submit" class="btn btn-success" id="addburger">
            <span class="fa fa-thumbs-up"></span>
          </button>
          <br><br>
        

        </div>
      </form>
    </panel>

    <div class="row">
      <div class="col-sm-5">
        <div class="panel panel-default">
          <div class="panel-heading text-light bg-success" id="leftside"><strong>Here's Your Burger</strong>
            <p>To eat it, click the Yum button.</p>
          </div>
          <div class="panel-body">

            <ul>
              {{#each burgers}}
              {{#unless devoured}}

              <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
              <button type="button" class="eatburger btn btn-success" id="eatbutton" data-id="{{this.id}}"
                data-newDevoured="{{devour}}">Yum</button>
              <hr>
              {{/unless}}
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
    </div>
